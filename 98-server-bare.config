# Boot
CONFIG_BLK_DEV_INITRD=y

# IPMI
CONFIG_IPMI_HANDLER=y
# SMBus Handler
CONFIG_IPMI_SSIF=y
# IPIM ACPI Management
CONFIG_ACPI_IPMI=y
# IPMI System interface handler
CONFIG_IPMI_SI=y
# IPMI Character device interface
CONFIG_IPMI_DEVICE_INTERFACE=y
CONFIG_INPUT_JOYDEV=y
# ACPI
CONFIG_CPU_FREQ=y
CONFIG_X86_ACPI_CPUFREQ=y
CONFIG_CPU_FREQ_GOV_SCHEDUTIL=y
CONFIG_X86_AMD_PSTATE=y
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y
CONFIG_CPU_FREQ_GOV_POWERSAVE=y
CONFIG_CPU_FREQ_GOV_USERSPACE=y
CONFIG_CPU_FREQ_DEFAULT_GOV_USERSPACE=y

# Board
# i2c
CONFIG_I2C_PIIX4=y
# i2c bitbanging
CONFIG_I2C_ALGOBIT=y
# Enable pc speakcer
CONFIG_PCSPKR_PLATFORM=y

# Processor/chipset
CONFIG_PROCESSOR_SELECT=y
CONFIG_CPU_SUP_AMD=y
# AMD Temp sensor
CONFIG_SENSORS_K10TEMP=y
# AMD microcode
CONFIG_MICROCODE=y
CONFIG_MICROCODE_AMD=y
CONFIG_X86_MCE_AMD=y
CONFIG_PERF_EVENTS_INTEL_RAPL=y
CONFIG_PERF_EVENTS_AMD_POWER=y
CONFIG_PERF_EVENTS_AMD_UNCORE=y
CONFIG_PERF_EVENTS_AMD_BRS=y
# AMD PassThru DMA engine
CONFIG_AMD_PTDMA=y
# Platform
CONFIG_ACPI_PLATFORM_PROFILE=y
CONFIG_X86_PLATFORM_DEVICES=y
CONFIG_AMD_PMF=y
CONFIG_AMD_HSMP=y
# Let the knerenl control processor frequency/pstates
CONFIG_X86_ACPI_CPUFREQ=y
# Enable AMD virtualization
CONFIG_KVM_AMD=y
# Enable AMD hardware crypto devices
CONFIG_CRYPTO_HW=y
CONFIG_CRYPTO_DEV_CCP=y
CONFIG_CRYPTO_DEV_CCP_DD=y
CONFIG_CRYPTO_DEV_SP_CCP=y
CONFIG_CRYPTO_DEV_CCP_CRYPTO=y
CONFIG_CRYPTO_DEV_SP_PSP=y
# Watchdog
CONFIG_SP5100_TCO=y
# DMA
CONFIG_DMADEVICES=y
CONFIG_AMD_PTDMA=y
# Secure memory encryption
CONFIG_AMD_MEM_ENCRYPT=y
# Enable chip iommu
CONFIG_AMD_IOMMU=y
CONFIG_AMD_IOMMU_V2=y

# Display
CONFIG_DRM=y
CONFIG_DRM_TTM=y
CONFIG_DRM_TTM_HELPER=y
CONFIG_DRM_AST=y
CONFIG_DRM_VRAM_HELPER=y
CONFIG_DRM_KMS_HELPER=y

# Networking
CONFIG_NETDEVICES=y
# Enable ethernet drivers
CONFIG_ETHERNET=y
CONFIG_PHYLIB=y
CONFIG_MDIO=y
CONFIG_MDIO_DEVICE=y
# Enable intel devices
CONFIG_NET_VENDOR_INTEL=y
# Intel 10gbe driver 
CONFIG_IXGBE=y
CONFIG_IXGBE_HWMON=y
# CONFIG_IXGBE_DCA is not set
# Bridge support
CONFIG_BRIDGE=y
# VLAN support
CONFIG_VLAN_8021Q=y
CONFIG_LLC=y
CONFIG_STP=y
# Add Wireguard support
CONFIG_WIREGUARD=y

# Storage
# Enable RAID (multiple devices driver) support
CONFIG_MD=y
CONFIG_BLK_DEV_MD=y
CONFIG_DM_MIRROR=y
CONFIG_DM_ZERO=y
# Enable block devices
CONFIG_BLK_DEV=y
CONFIG_PARTITION_ADVANCED=y
CONFIG_MSDOS_PARTITION=y
CONFIG_EFI_PARTITION=y
CONFIG_BLK_DEV_RAM=y
# NVME Support
CONFIG_BLK_DEV_NVME=y
CONFIG_NVME_CORE=y
# Enable SCSI
CONFIG_SCSI=y
CONFIG_SCSI_LOWLEVEL=y
# SCSI RAID
CONFIG_RAID_ATTRS=y
SCSI_SAS_ATTRS=y
CONFIG_BLK_DEV_SD=y
# Disable unneeded modules
# CONFIG_SCSI_PROC_FS is not set 
CONFIG_SCSI_MPT3SAS=y
CONFIG_SCSI_SAS_ATTRS=y
# SATA
CONFIG_ATA=y
CONFIG_SATA_HOST=y
# Disable IDE
# CONFIG_ATA_SFF is not set
CONFIG_ATA_ACPI=y
CONFIG_SATA_AHCI=y
# USB
CONFIG_USB_SUPPORT=y
CONFIG_USB_PCI=y
CONFIG_USB=y
CONFIG_USB_ANNOUNCE_NEW_DEVICES=y
CONFIG_HID=y
# USB 3
CONFIG_USB_XHCI_HCD=y
# USB 2
CONFIG_USB_EHCI_HCD=y
# USB Storage
CONFIG_USB_STORAGE=y
CONFIG_USB_UAS=y
# FS
# Enable btrfs
CONFIG_BTRFS_FS=y
CONFIG_BTRFS_FS_POSIX_ACL=y
# MSDOS
CONFIG_MISC_FILESYSTEMS=y
CONFIG_MSDOS_FS=y
CONFIG_FAT_FS=y
CONFIG_VFAT_FS=y
CONFIG_EXFAT_FS=y
CONFIG_NTFS_FS=y
CONFIG_NTFS_RW=y
CONFIG_NTFS3_FS=y
# Character sets
CONFIG_NLS_ISO8859_1=y
CONFIG_NLS_UTF8=y
CONFIG_NLS_ASCII=y
CONFIG_NLS_CODEPAGE_437=y
# NFS
CONFIG_NETWORK_FILESYSTEMS=y
CONFIG_NFS_FS=y
CONFIG_NFS_V4=y
CONFIG_NFS_V4_1=y
CONFIG_NFS_V4_2=y
CONFIG_NFSD=y
CONFIG_NFSD_V4=y

# Crypto
CONFIG_CRC32=y
CONFIG_CRYPTO_CRC32=y
CONFIG_CRYPTO_CRC32C=y
CRYPTO_CRC32C_INTEL=y
CONFIG_CRYPTO_CRC32_PCLMUL=y
CRYPTO_CRCT10DIF_PCLMUL=y
CONFIG_CRYPTO_GHASH_CLMUL_NI_INTEL=y
CONFIG_CRYPTO_PCRYPT=y
CONFIG_CRYPTO_CRYPTD=y
CONFIG_CRYPTO_USER=y
CONFIG_CRYPTO_CURVE25519_X86=y
CONFIG_CRYPTO_LIB_CURVE25519=y
CONFIG_CRYPTO_POLYVAL=y
CONFIG_CRYPTO_POLYVAL_CLMUL_NI=y

# Error detection and correction
CONFIG_RAS=y
CONFIG_EDAC=y
CONFIG_EDAC_DECODE_MCE=y
# CONFIG_EDAC_LEGACY_SYSFS is not set
CONFIG_EDAC_AMD64=y

# Security
# CONFIG_MICROCODE_LATE_LOADING is not set
